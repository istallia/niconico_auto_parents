{
	"manifest_version" : 2,
	"name"             : "コンテンツツリー登録支援ツール",
	"version"          : "0.5.3",
	"description"      : "候補作品をニコニコのコンテンツツリーに登録する作業を自動化する拡張機能",
	"author"           : "istallia",
	"icons" : {
		"32"  : "icon_32.png",
		"48"  : "icon_48.png",
		"128" : "icon_128.png"
	},
	"content_scripts" : [{
		"matches" : ["*://commons.nicovideo.jp/tree/edit/*"],
		"js"      : ["tree-edit.js"],
		"css"     : ["tree-edit.css"]
	}, {
		"matches" : ["*://commons.nicovideo.jp/tree/*"],
		"js"      : ["tree-view.js"],
		"css"     : ["tree-view.css"]
	}],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"permissions" : [
		"bookmarks",
		"alarms",
		"tabs",
		"*://commons.nicovideo.jp/tree/*",
		"*://public-api.commons.nicovideo.jp/v1/tree/*"
	]
}